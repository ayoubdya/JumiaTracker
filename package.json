{
  "name": "jumia-tracker",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "axios": "^1.2.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^11.5.0",
    "helmet": "^6.0.1",
    "mongoose": "^6.8.4",
    "morgan": "^1.10.0",
    "path": "^0.12.7"
    
  },
  "scripts": {
    "dev1": "nodemon server.js",
    "dev2": "nodemon refresher.js",
    "dev": "concurrently \"nodemon server.js\" \"nodemon refresher.js\"",
    "build": "sed -i -E 's/(NODE_ENV)=\\w+/\\1=production/' .env client/.env && pnpm install --prod && pnpm --prod --prefix client install && pnpm --prefix client run build",
    "start": "node server.js & node refresher.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "nodemon": "^2.0.20"
  }
}
